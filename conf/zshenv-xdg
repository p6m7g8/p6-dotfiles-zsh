# ZSH initialization
# man zsh(1)
#
# if ZDOTDIR is unset HOME is used
# /etc is install specific
#
# /etc/zshenv
# $HOME/.zshenv (me - conf/zshenv-xdg)
# $ZDOTDIR/.zshenv (p6dfz env - conf/zshenv)
# if login
#   /etc/zprofile
#   $ZDOTDIR/.zprofile
# if interactive
#      /etc/zshrc
#      $ZDOTDIR/.zshrc (entry point - conf/.zshrc)
# if login
#   /etc/zlogin
#   $ZDOTDIR/.zlogin

# https://specifications.freedesktop.org/basedir-spec/latest/
export XDG_DATA_HOME=$HOME/.local/share
export XDG_CONFIG_HOME=$HOME/.config
export XDG_CACHE_HOME=$HOME/.cache

export XDG_DATA_DIRS=/usr/local/share/:/usr/share/ 
export XDG_CONFIG_DIR=/etc/xdg
#export XDG_RUNTIME_DIR

# Indirection from XDG
export P6_DFZ_DATA_DIR=$XDG_DATA_HOME/p6m7g8/p6dfz
export P6_DFZ_CONFIG_DIR=$XDG_CONFIG_HOME/p6m7g8/p6dfz
export P6_DFZ_CACHE_DIR=$XDG_CACHE_HOME/p6m7g8/p6dfz

export P6_DFZ_DATA_DIRS=$XDG_DATA_DIRS
export P6_DFZ_CONFIG_DIRS=$XDG_CONFIG_DIR
export P6_DFZ_RUNTIME_DIR=$XDG_RUNTIME_DIR

# myself
export P6_DFZ_ZSHENV_XDG_FILE=$P6_DFZ_CONFIG_DIR/conf/zshenv-xdg

# Load p6dfz's env
export P6_DFZ_ENV_FILE=$P6_DFZ_CONFIG_DIR/conf/zshenv
. $P6_DFZ_ENV_FILE

# https://wiki.archlinux.org/index.php/XDG_Base_Directory_support for ZSH/ZDOTDIR
export ZDOTDIR=$P6_DFZ_CONFIG_DIR/conf
